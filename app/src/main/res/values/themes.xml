<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Codex" parent="Theme.AppCompat.NoActionBar">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:windowContentTransitions">false</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Splash" parent="Theme.SplashScreen">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="postSplashScreenTheme">@style/Codex</item>

        <item name="windowSplashScreenBackground">@color/splash_bg_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
    </style>
</resources>